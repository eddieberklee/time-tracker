<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">
    <!-- height for @layout/item_event_layout set in RevampedBlockActivity:initEvents() -->
    <ImageView
        android:id="@+id/event_dot"
        android:layout_width="@dimen/current_event_dot_size"
        android:layout_height="@dimen/current_event_dot_size"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="-3dp"
        android:background="@drawable/blue_circle_outline_layered"
        android:padding="5dp"/>
    <FrameLayout
        android:layout_width="@dimen/current_event_dot_size"
        android:layout_height="match_parent"
        android:layout_below="@+id/event_dot"
        android:layout_alignLeft="@+id/event_dot">
        <View
            android:id="@+id/white_stroke_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/white_transp_80"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center_horizontal"/>
        <View
            android:id="@+id/event_vertical_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/flatui_blue_1"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>
    <com.compscieddy.timetracker.ui.ForadayTextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/event_dot"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/flatui_blue_1"
        app:fontface="montserrat_light"
        tools:text="6:14"/>
    <com.compscieddy.timetracker.ui.ForadayTextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event_dot"
        android:layout_below="@+id/event_time"
        android:layout_alignLeft="@+id/event_time"
        android:layout_marginTop="-1dp"
        android:textColor="@color/flatui_blue_1"
        android:textSize="@dimen/event_title_text_size"
        tools:text="Running"/>
    <com.compscieddy.timetracker.ui.ForadayTextView
        android:id="@+id/event_am_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/event_time"
        android:layout_alignBottom="@+id/event_time"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-2dp"
        app:fontface="montserrat_light"
        android:textColor="@color/flatui_blue_1"
        tools:text="pm"/>
    <com.compscieddy.timetracker.ui.ForadayTextView
        android:id="@+id/event_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/event_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        tools:text="1hr"/>
</RelativeLayout>