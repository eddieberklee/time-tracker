<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.compscieddy.timetracker.MainActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/events_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transp_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">
        <View
            android:layout_width="@dimen/current_event_dot_size"
            android:layout_height="@dimen/current_event_dot_size"
            android:layout_marginLeft="-3dp"
            android:background="@drawable/blue_circle_outline_layered"/>
        <com.compscieddy.timetracker.ui.ForadayEditText
            android:id="@+id/new_event_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-14dp"
            app:color="@color/flatui_blue_1"/>
        <com.compscieddy.timetracker.ui.ForadayTextView
            android:id="@+id/new_event_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="13dp"
            android:paddingRight="14dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="-18dp"
            android:visibility="invisible"
            android:background="@drawable/blue_rounded_fill"/>
    </LinearLayout>

</RelativeLayout>
