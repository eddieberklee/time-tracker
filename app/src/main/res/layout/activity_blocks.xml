<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RevampedBlockActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/switch_layouts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyscale_9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="@dimen/negative_activity_horizontal_margin"
        android:layout_marginRight="@dimen/negative_activity_horizontal_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/switch_to_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/switch_to_font_size"
            android:layout_weight="1"
            android:text="Switch to Main"/>
        <TextView
            android:id="@+id/switch_to_dots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/switch_to_font_size"
            android:layout_weight="1"
            android:text="Switch to Dots"/>
    </LinearLayout>

    <com.compscieddy.timetracker.ui.LockableScrollView
        android:id="@+id/events_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_event_section"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/events_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:clipChildren="false"/>
    </com.compscieddy.timetracker.ui.LockableScrollView>

    <RelativeLayout
        android:id="@+id/new_event_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_minimum_height"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:clipToPadding="true">
        <View
            android:id="@+id/time_indicator_line"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <com.compscieddy.timetracker.ui.ForadayTextView
            android:id="@+id/event_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/flatui_green_2"
            android:paddingTop="7dp"
            app:fontface="montserrat_light"
            android:text="Now"/>
        <com.compscieddy.timetracker.ui.ForadayEditText
            android:id="@+id/new_event_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_event_edit_text_height"
            android:layout_toRightOf="@+id/event_time"
            android:inputType="textCapSentences"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="6dp"
            android:background="@color/flatui_blue_1"
            android:textColorHint="@color/white_transp_60"
            android:hint="What are you getting done?"/>
    </RelativeLayout>

    <com.compscieddy.timetracker.ui.ForadayTextView
        android:id="@+id/new_event_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="11dp"
        android:text="Start"
        android:textSize="18sp"
        android:paddingLeft="13dp"
        android:paddingRight="14dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/white_rounded_fill"
        android:textColor="@color/flatui_blue_1"/>

</RelativeLayout>
